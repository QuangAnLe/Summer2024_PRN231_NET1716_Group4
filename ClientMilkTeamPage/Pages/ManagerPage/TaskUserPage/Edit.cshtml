@page
@model ClientMilkTeamPage.Pages.ManagerPage.TaskUserPage.EditModel
@{
    ViewData["Title"] = "Edit Task User";
}

<h2>Edit Task User</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="TaskUser.TaskId" class="control-label"></label>
        <input asp-for="TaskUser.TaskId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="TaskUser.WorkName" class="control-label"></label>
        <input asp-for="TaskUser.WorkName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TaskUser.WorkDescription" class="control-label"></label>
        <input asp-for="TaskUser.WorkDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TaskUser.Status" class="control-label"></label>
        <select asp-for="TaskUser.Status" class="form-control">
            <option value="">Processing</option>
            <option value="true">Success</option>
            <option value="false">Failed</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TaskUser.UserID" class="control-label"></label>
        <select asp-for="TaskUser.UserID" class="form-control">
            @foreach (var user in Model.UserList)
            {
                <option value="@user.UserID" selected="@((user.UserID == Model.TaskUser.UserID) ? "selected" : null)">
                    @user.UserName
                </option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TaskUser.OrderID" class="control-label"></label>
        <input asp-for="TaskUser.OrderID" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
