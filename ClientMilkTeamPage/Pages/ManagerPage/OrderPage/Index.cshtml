@page
@model ClientMilkTeamPage.Pages.ManagerPage.OrderPage.IndexModel
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = null;
}
<style>
    .status-processing {
        color: #6c757d;
    }

    .status-success {
        color: #28a745;
    }

    .status-failed {
        color: #dc3545;
    }
</style>

@functions {
    public string GetStatusDisplay(bool? status)
    {
        return status switch
        {
            null => "Processing",
            true => "Success",
            false => "Failed"
        };
    }
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Modern Admin Dashboard</title>
    <link rel="stylesheet" href="~/admin/admin.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        table thead th {
            padding: 1rem 2rem;
            text-align: center;
            font-size: 21px;
        }

        tbody tr {
            padding: 1rem 1rem;
            text-align: center;
            font-size: 19px;
        }

            tbody tr:hover {
                background-color: #e2ecff
            }

        .side-content ul li:hover {
            border: 2px solid #0d6efd;
            background: #2B384E;
        }
    </style>
</head>

<h1>Orders</h1>
<body>
    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3>A<span>dmin</span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <h4></h4>

            </div>
            <div class="side-menu">
                <ul>
                    <li>
                        <a asp-page="/AdminPage/UserPage/Index">
                            <span><i class="fa-solid fa-user-tie"></i></span>
                            <small>User</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/AdminPage/TaskUserPage/Index">
                            <span><i class="fa-solid fa-user-tie"></i></span>
                            <small>Task User</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/AdminPage/TeaPage/Index">
                            <span><i class="fa-solid fa-kiwi-bird"></i></span>
                            <small>Tea</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/AdminPage/OrderPage/Index">
                            <span class="las la-shopping-cart"></span>
                            <small>Orders</small>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/AdminPage/MaterialPage/Index">
                            <span><i class="fa-solid fa-comment"></i></span>
                            <small>Material</small>
                        </a>
                    </li>

                    <li>
                        <a asp-page="/AdminPage/DistrictPage/Index">
                            <span class="las la-shopping-cart"></span>
                            <small>Distric</small>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main-content">

        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">


                    <div class="user">
                        <div class="bg-img" style="background-image: url(img/1.jpeg)"></div>

                        <span class="las la-power-off"></span>
                        <a class="actions" asp-page="/Logout"><button>Logout</button></a>
                    </div>
                </div>
            </div>
        </header>
        <main>
            <div class="page-header">
                <h1>Order Management</h1>
            </div>

            <div class="page-content">

                <div class="record-header">

                    <a asp-page="Create"><button class="btn btn-primary">Create</button></a>
                    <div class="browse">
                    </div>
                </div>

                <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Orders[0].UserID)</th>
                            <th>@Html.DisplayNameFor(model => model.Orders[0].StartDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Orders[0].EndDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Orders[0].ShipAddress)</th>
                            <th>@Html.DisplayNameFor(model => model.Orders[0].Status)</th>
                            <th>@Html.DisplayNameFor(model => model.Orders[0].TypeOrder)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Orders)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.ShipAddress)</td>
                                <td class="@($"status-{GetStatusDisplay(item.Status).ToLower()}")">@GetStatusDisplay(item.Status)</td>
                                <td>@Html.DisplayFor(modelItem => item.TypeOrder)</td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.OrderID">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.OrderID">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.OrderID">Delete</a> |
                                    <form method="post" asp-page-handler="SetStatus" asp-route-id="@item.OrderID" asp-route-status="true" class="d-inline">
                                        <button type="submit" class="btn btn-sm" style="background-color: #28a745; color: #fff;">Set Success</button>
                                    </form>
                                    |
                                    <form method="post" asp-page-handler="SetStatus" asp-route-id="@item.OrderID" asp-route-status="false" class="d-inline">
                                        <button type="submit" class="btn btn-sm" style="background-color: #dc3545; color: #fff;">Set Failed</button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                </div>
            </div>

        </main>

    </div>
    <script src="~admin/admin.js"></script>
    <script src="https://kit.fontawesome.com/aadd71a7c7.js" crossorigin="anonymous"></script>
</body>
