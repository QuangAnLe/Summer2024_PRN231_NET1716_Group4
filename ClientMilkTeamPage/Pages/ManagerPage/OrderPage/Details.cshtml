@page
@model ClientMilkTeamPage.Pages.ManagerPage.OrderPage.DetailsModel
@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderVM.OrderID)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderVM.OrderID)</dd>
        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderVM.StartDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderVM.StartDate)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderVM.EndDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderVM.EndDate)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderVM.ShipAddress)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderVM.ShipAddress)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderVM.Status)</dt>
        <dd class="col-sm-10">@Model.GetStatusDisplay(Model.OrderVM.Status)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderVM.TypeOrder)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderVM.TypeOrder)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderVM.ReasonContent)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderVM.ReasonContent)</dd>
    </dl>
</div>

<h4>Order Details</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.Tea.TeaName</td>
                <td>@detail.Quantity</td>
                <td>@detail.Tea.Price</td>
                <td>@detail.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.OrderVM.OrderID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>