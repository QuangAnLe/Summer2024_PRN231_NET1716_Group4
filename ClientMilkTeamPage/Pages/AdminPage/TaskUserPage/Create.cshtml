@page
@model ClientMilkTeamPage.Pages.AdminPage.TaskUserPage.CreateModel
@{
    ViewData["Title"] = "Create Task User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Create Task User - ClientMilkTeamPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }

        .navbar {
            background-color: #28a745 !important; /* Dark green navbar */
        }

        .navbar-brand {
            color: white !important; /* White text for navbar brand */
        }

        .navbar-nav .nav-link {
            color: white !important; /* White text for navbar links */
        }
    </style>
</head>
<body>

   

    <div class="container mt-4">
        <h1>Create Task User</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TaskUser.WorkName" class="form-label">Work Name</label>
                        <input asp-for="TaskUser.WorkName" class="form-control" />
                        <span asp-validation-for="TaskUser.WorkName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TaskUser.WorkDescription" class="form-label">Work Description</label>
                        <input asp-for="TaskUser.WorkDescription" class="form-control" />
                        <span asp-validation-for="TaskUser.WorkDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TaskUser.UserID" class="form-label">User ID</label>
                        <input asp-for="TaskUser.UserID" class="form-control" />
                        <span asp-validation-for="TaskUser.UserID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TaskUser.OrderID" class="form-label">Order ID</label>
                        <input asp-for="TaskUser.OrderID" class="form-control" />
                        <span asp-validation-for="TaskUser.OrderID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TaskUser.Status" class="form-label">Status</label>
                        <select asp-for="TaskUser.Status" class="form-control">
                            <option value="">Select Status</option>
                            <option value="true">Success</option>
                            <option value="false">Failed</option>
                        </select>
                        <span asp-validation-for="TaskUser.Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
