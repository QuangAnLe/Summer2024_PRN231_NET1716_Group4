@page
@model ClientMilkTeamPage.Pages.AdminPage.TaskUserPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskUser.WorkName" class="control-label"></label>
                <input asp-for="TaskUser.WorkName" class="form-control" />
                <span asp-validation-for="TaskUser.WorkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskUser.WorkDescription" class="control-label"></label>
                <input asp-for="TaskUser.WorkDescription" class="form-control" />
                <span asp-validation-for="TaskUser.WorkDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskUser.UserID" class="control-label"></label>
                <input asp-for="TaskUser.UserID" class="form-control" />
                <span asp-validation-for="TaskUser.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskUser.OrderID" class="control-label"></label>
                <input asp-for="TaskUser.OrderID" class="form-control" />
                <span asp-validation-for="TaskUser.OrderID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" id="Status" name="Status" @(Model.TaskUser.Status == true ? "checked" : "") />
                <label class="form-check-label" for="Status">@Html.DisplayNameFor(model => model.TaskUser.Status)</label>
                <input type="hidden" asp-for="TaskUser.Status" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
